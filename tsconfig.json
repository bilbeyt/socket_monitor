{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["tests/*"]
    },
    "strict": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
}
